{
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "wordpress",
				"type": "webroot",
				"version": "4.0",
				"dist": {
					"type": "zip",
					"url": "https://github.com/WordPress/WordPress/archive/4.0.zip"
				},
				"require" : {
					"fancyguy/webroot-installer": "1.0.0"
				}
			}
		},
		{
			"type": "composer",
			"url": "http://wpackagist.org"
		}
	],
	"require": {
		"php": ">=5.3.0",
		"wordpress": "4.0",
		"fancyguy/webroot-installer": "1.0.0",
		"qobo/phake-builder": "~1.0",
		"wpackagist/disable-wordpress-updates": "1.4.2",
		"wpackagist/wp-theme-plugin-editor-disable": "1.0.0",
		"wpackagist/disable-comments": "*",
		"wpackagist-plugin/jetpack": "3.2",
		"wpackagist-theme/twentyfourteen": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.3",
		"wpackagist-plugin/theme-check": "*",
		"wpackagist-plugin/debug-bar": "0.8.2",
		"wpackagist-plugin/debug-bar-console": "*",
		"wpackagist-plugin/p3-profiler": "*",
		"wpackagist-plugin/user-switching": "1.0.1"
	},
	"extra": {
		"webroot-dir": "wp",
		"webroot-package": "wordpress"
	}
}
